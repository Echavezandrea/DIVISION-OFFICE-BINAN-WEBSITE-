        }


 <body>
 <!-- News Section -->
    <div class="news-container">
        <div class="myNews fade">
            <img src="{% static 'images/p1.jpg' %}" style="width:100%">
        </div>
       <div class="myNews fade">
            <img src="{% static 'images/p2.jpg' %}" style="width:100%">
        </div>
        <div class="myNews fade">
            <img src="{% static 'images/p3.jpg' %}" style="width:100%">
        </div>

        <!-- Navigation Buttons -->
        <a class="prev" onclick="plusNews(-1)">&#10094;</a>
        <a class="next" onclick="plusNews(1)">&#10095;</a>
    </div>
</body>


<script>
       <!-- JavaScript of News -->
 let newsIndex = 0;
        showNews(); // Initial call

        function showNews() {
            let news = document.getElementsByClassName("myNews");
            for (let i = 0; i < slides.length; i++) {
                news[i].style.display = "none";
            }
            newsIndex++;
            if (newsIndex > news.length) {newsIndex = 1}
            news[newsIndex-1].style.display = "block";
            setTimeout(showNews, 10000); // Change image every 10 seconds
        }

        function plusNews(n) {
            showNews(newsIndex += n);
        }
