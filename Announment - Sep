           margin: auto;
            overflow: hidden;
        }

        .myNews {
            display: none;
            height: 100%;
            width: 100%;
        }

        .myNews img {
            height: 100%; /* Ensures the image fills the height of the container */
            width: 100%; /* Maintains aspect ratio */
            display: block;
            margin-left: -160;
        }

        /* Navigation Buttons */
        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
